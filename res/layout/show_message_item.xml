<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ddffffff"
     >

    <ImageView 
        android:id="@+id/minimize_this_show_message_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/minimize"
        />
    
    <TextView 
        android:id="@+id/text_message_to_try_buyhatke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textColor="#000000"
        android:text="\nHey, There is a smarter way to compare prices, check coupons and know the best time to buy for what you are shopping. Click to check now\n"
        android:layout_below="@id/minimize_this_show_message_item"
        />
    
    <Button 
        android:id="@+id/button_to_open_specific_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try it!"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_message_to_try_buyhatke"
        />

</RelativeLayout>
